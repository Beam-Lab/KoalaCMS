{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=aspnet-BeamLab.Koala.Web-565cedcf-ffd5-46fa-bfd3-4ae15f0463fa;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AppSettings": {
    "SiteShortTitle": "Koala CMS", // The short name of the site.
    "SiteTitle": "Koala CMS - a light CMS" // The name of the site.
  },
  "ResponseCompressionSettings": {
    // Additional MIME types (other than the built in defaults) to enable GZIP compression for.
    "MimeTypes": [
      // ATOM
      "application/atom+xml",
      // Images
      "image/svg+xml",
      "image/x-icon",
      // Fonts
      "application/vnd.ms-fontobject",
      "application/x-font-ttf",
      "font/otf"
    ]
  },
  "SitemapSettings": {
    // An array of URL's where the sitemap can be pinged to. Note that Yahoo uses the same sitemap ping location as Bing.
    "SitemapPingLocations": [
      "https://www.google.com/ping?sitemap=",
      "http://www.bing.com/ping?sitemap="
    ]
  },
  "CacheProfileSettings": {
    "CacheProfiles": {
      // Cache the browserconfig route (/browserconfig.xml) for a day.
      "BrowserConfigXml": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the error route (/error/404/notfound) by status code for a day.
      "Error": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the Atom 1.0 feed route (/feed) for a day.
      "Feed": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the manifest route (/manifest.json) for a day.
      "ManifestJson": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the open search route (/opensearch.xml) for a day.
      "OpenSearchXml": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the robots.txt route for a day.
      "RobotsText": {
        "Duration": 86400,
        "Location": "Any"
      },
      // Cache the nodes in the sitemap for a day.
      "SitemapNodes": {
        "Duration": 86400
      },
      // Cache static files for a year.
      "StaticFiles": {
        "Duration": 31536000,
        "Location": "Any"
      }
    }
  }
}
